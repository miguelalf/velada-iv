                })

                const tzOffset = d.getTimezoneOffset()
                const diff = tzOffset / 60 * -1
                const gmt = diff > 0 ? `GMT+${diff}` : `GMT-${Math.abs(diff)}`

                const TZ_DICTIONARY = {
                    "GMT+1" : "CET",
                }

                const selfScript = document.currentScript
                selfScript.parentNode.innerHTML = `${date}H ${TZ_DICTIONARY[gmt] ?? gmt}`
            </script>
